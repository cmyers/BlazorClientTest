@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
<RemoteAuthenticatorView Action="@Action" ApplicationPaths="@options"/>

@code{
    [Parameter] public string Action { get; set; }

    private RemoteAuthenticationApplicationPathsOptions options = new RemoteAuthenticationApplicationPathsOptions
    {
        RemoteRegisterPath = "Identity/Account/Register",
        RemoteProfilePath = "Identity/Account/Manage"
    };
}
